{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build",
        "command": "/usr/local/bin/dotnet",
        "type": "process",
        "args": [
          "build",
          "${workspaceFolder}/Tada/Tada.csproj",
          "/property:GenerateFullPaths=true",
          "/consoleloggerparameters:NoSummary"
        ],
        "problemMatcher": "$msCompile"
      },
      {
        "label": "publish",
        "command": "/usr/local/bin/dotnet",
        "type": "process",
        "args": [
          "publish",
          "${workspaceFolder}/Tada/Tada.csproj",
          "/property:GenerateFullPaths=true",
          "/consoleloggerparameters:NoSummary"
        ],
        "problemMatcher": "$msCompile"
      },
      {
        "label": "watch",
        "command": "/usr/local/bin/dotnet",
        "type": "process",
        "args": [
          "watch",
          "run",
          "--project",
          "${workspaceFolder}/Tada/Tada/Tada.csproj"
        ],
        "problemMatcher": "$msCompile"
      }
    ]
}
